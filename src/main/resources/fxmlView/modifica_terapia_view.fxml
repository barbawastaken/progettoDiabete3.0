<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Diabetologo.ModificaTerapiaController">

    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Barra superiore -->
                <HBox fx:id="topBar" alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: dodgerblue;">
                    <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                        <Image url="@../images/userImage.png" />
                    </ImageView>
                    <Label prefHeight="27.0" prefWidth="168.0" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Area Diabetologo" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button onAction="#onHomePagePressed" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="HOMEPAGE" />
                    <Button onAction="#onLogoutPressed" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="LOGOUT" />
                    <HBox prefHeight="44.0" prefWidth="1.0" spacing="10" />
                </HBox>

            <!-- Spazio verticale flessibile -->
            <Pane VBox.vgrow="ALWAYS" />

            <!-- Form inserimento dati -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>

                <Label text="Terapia" />
                <TextField fx:id="terapiaField" promptText="Inserisci il nome della terapia" />

                <Label text="Farmaco" />
                <TextField fx:id="farmacoField" promptText="Inserisci il nome del farmaco" />

                <Label text="Quantità Assunta" />
                <TextField fx:id="quantitaField" promptText="Inserisci la quantità assunta" />

                <Label text="Numero di Assunzioni Giornaliere" />
                <TextField fx:id="frequenzaField" promptText="Es. 2 volte al giorno" />

                <Label text="Indicazioni Facoltative" />
                <TextField fx:id="indicazioniField" promptText="Eventuali note o raccomandazioni" />
            </VBox>

            <!-- Pulsanti finali -->
            <HBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Button fx:id="resetButton" onAction="#handleReset" prefWidth="100" text="Reset" />
                <Button fx:id="confermaButton" onAction="#onSendButtonPressed" prefWidth="100" text="Conferma" />
            </HBox>

            <!-- Spazio finale per centrare tutto -->
            <Pane VBox.vgrow="ALWAYS" />

        </VBox>
    </children>
</AnchorPane>

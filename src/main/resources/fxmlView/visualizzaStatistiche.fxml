<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.text.Text?>
<BorderPane minHeight="500.0" minWidth="800.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Amministratore.VisualizzaStatisticheController">

    <top>
        <HBox fx:id="navbarContainer" />
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox spacing="15" style="-fx-padding: 15;">

                <!-- Pannello di selezione responsive -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;">
                     <Label text="Seleziona Paziente:" style="-fx-font-weight: bold;"/>
                     <ComboBox fx:id="pazienteCombo" prefWidth="150" minWidth="50" maxWidth="150" promptText="Tutti i pazienti" HBox.hgrow="ALWAYS"/>

                    <Button fx:id="aggiornaInfoButton" prefWidth="100" minWidth="50" text="Aggiorna info" visible="false" />
                </HBox>

                <!-- Grafico che si adatta automaticamente alle dimensioni -->
                <VBox VBox.vgrow="ALWAYS" style="-fx-padding: 5;">
                    <LineChart fx:id="lineChart" title="Andamento glicemico pazienti" style="-fx-font-weight: bold;" minHeight="550" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Data - Momento - Pre/Post" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Valore Glicemico" />
                        </yAxis>
                    </LineChart>
                </VBox>

                <!-- Grafico per andamento glicemico dell'ultimo mese e dell'ultima settimana -->
                <HBox spacing="20" style="-fx-padding: 5;">
                    <LineChart fx:id="lineChartLastMonth" title="Andamento glicemico nell'ultimo mese" style="-fx-font-weight: bold;" minHeight="550" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Data - Momento - Pre/Post" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Valore Glicemico" />
                        </yAxis>
                    </LineChart>

                    <LineChart fx:id="lineChartLastWeek" title="Andamento glicemico nell'ultima settimana" style="-fx-font-weight: bold;" minHeight="550" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Data - Momento - Pre/Post" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Valore Glicemico" />
                        </yAxis>
                    </LineChart>
                </HBox>

                <!-- Tabella per le terapie associate ai pazienti -->
                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="15" style="-fx-padding: 20;">
                    <!-- Titolo -->
                    <Text text="Terapie Prescritte"
                          textAlignment="CENTER"
                          style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <HBox alignment="CENTER">
                        <TableView fx:id="tabellaTerapie" VBox.vgrow="ALWAYS" minHeight="200" minWidth="500">
                            <columns>
                                <TableColumn fx:id="nomePazienteTerapia" text="Paziente" prefWidth="150"/>
                                <TableColumn fx:id="nomeTerapia" text="Terapia" prefWidth="150"/>
                                <TableColumn fx:id="farmacoTerapia" text="Farmaco" prefWidth="120"/>
                                <TableColumn fx:id="quantitaTerapia" text="Quantità" prefWidth="60"/>
                                <TableColumn fx:id="assunzioniGiornaliereTerapia" text="Assunzioni giornaliere" prefWidth="140"/>
                                <TableColumn fx:id="indicazioniTerapia" text="Indicazioni" prefWidth="170"/>
                                <TableColumn fx:id="dataPrescrizione" text="Data di prescrizione" />
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>

                <!-- Tabella per le assunzioni dei farmaci da parte dei pazienti -->
                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="15" style="-fx-padding: 20;">
                    <!-- Titolo -->
                    <Text text="Farmaci assunti"
                          textAlignment="CENTER"
                          style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <HBox alignment="CENTER">
                        <TableView fx:id="tabellaAssunzioni" VBox.vgrow="ALWAYS" minHeight="200" minWidth="500">
                            <columns>
                                <TableColumn fx:id="nomePazienteAssunzione" text="Paziente" prefWidth="160"/>
                                <TableColumn fx:id="farmacoAssunzione" text="Farmaco" prefWidth="160"/>
                                <TableColumn fx:id="quantitaAssunzione" text="Quantità" prefWidth="90"/>
                                <TableColumn fx:id="dataAssunzione" text="Data" prefWidth="110"/>
                                <TableColumn fx:id="orarioAssunzione" text="Orario" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>

                <!-- Tabella dei sintomi riscontrati e delle patologie concomitanti -->
                <HBox spacing="15" alignment="CENTER">
                    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="15" style="-fx-padding: 20;">
                        <!-- Titolo -->
                        <Text text="Sintomi riscontrati"
                              textAlignment="CENTER"
                              style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <HBox alignment="CENTER">
                            <TableView fx:id="tabellaSintomi" VBox.vgrow="ALWAYS" minHeight="200" minWidth="300">
                                <columns>
                                    <TableColumn fx:id="nomePazienteSintomo" text="Paziente" prefWidth="90"/>
                                    <TableColumn fx:id="sintomoPrincipale" text="Sintomo principale" prefWidth="130"/>
                                    <TableColumn fx:id="sintomiSpecificati" text="Altri sintomi" prefWidth="115"/>
                                    <TableColumn fx:id="dataSintomo" text="Data riferimento"/>
                                </columns>
                            </TableView>
                        </HBox>
                    </VBox>

                    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="15" style="-fx-padding: 20;">
                        <!-- Titolo -->
                        <Text text="Patologie concomitanti"
                              textAlignment="CENTER"
                              style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <HBox alignment="CENTER">
                            <TableView fx:id="tabellaPatologie" VBox.vgrow="ALWAYS" minHeight="200" minWidth="300">
                                <columns>
                                    <TableColumn fx:id="nomePazientePatologia" text="Paziente" prefWidth="100"/>
                                    <TableColumn fx:id="patologiaConcomitante" text="Patologia" prefWidth="150"/>
                                    <TableColumn fx:id="dataInizioPatologia" text="Data inizio"/>
                                    <TableColumn fx:id="dataFinePatologia" text="Data fine"/>
                                </columns>
                            </TableView>
                        </HBox>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
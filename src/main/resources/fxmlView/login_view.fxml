<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mainPane" prefHeight="500" prefWidth="900" stylesheets="/css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <children>
        <HBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- FORM Login -->
            <StackPane styleClass="form-container" HBox.hgrow="ALWAYS">
                <VBox fx:id="formPane" alignment="CENTER" spacing="15" styleClass="form-box" maxWidth="300">
                    <Label styleClass="title" text="Welcome Back">
                    </Label>

                    <Label text="Codice Fiscale" />
                    <TextField fx:id="taxCodeField" prefHeight="26.0" prefWidth="24.0" />

                    <Label text="Password" />
                    <TextField fx:id="passwordField" />

                    <HBox alignment="CENTER" spacing="10">
                        <Button onAction="#onResetPressed" text="Reset" />
                        <Button onAction="#onLoginPressed" text="Accedi" />
                    </HBox>
                </VBox>
            </StackPane>

            <!-- Separatore verticale -->
            <Pane prefWidth="2" style="-fx-background-color: #CCCCCC;" />

            <!-- Immagine -->
            <StackPane styleClass="image-pane" HBox.hgrow="ALWAYS">
                <VBox alignment="CENTER" spacing="20">
                    <ImageView fitWidth="200" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/logoImage.png" />
                        </image>
                    </ImageView>
                </VBox>
            </StackPane>
        </HBox>
    </children>
</AnchorPane>

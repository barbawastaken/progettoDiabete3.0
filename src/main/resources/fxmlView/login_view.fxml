<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.shape.Rectangle?>
<AnchorPane fx:id="mainPane" prefHeight="500" prefWidth="900"  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <children>
        <HBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <!-- FORM Login -->
            <StackPane styleClass="form-container" HBox.hgrow="ALWAYS">

                <Rectangle width="400" height="500" fill="#5AC8FA" arcWidth="15" arcHeight="15"/>
                <VBox fx:id="formPane" alignment="CENTER" maxWidth="300" spacing="15" styleClass="form-box">
                    <Label styleClass="title" text="Welcome Back">
                    </Label>

                    <Label text="Codice Fiscale" />
                    <TextField fx:id="taxCodeField" prefHeight="26.0" prefWidth="24.0" />

                    <Label text="Password" />
                    <PasswordField fx:id="passwordField" />

                    <HBox alignment="CENTER" spacing="10">
                        <Button onAction="#onResetPressed" text="Reset" />
                        <Button onAction="#onLoginPressed" text="Accedi" />
                    </HBox>
               <Text fx:id="error" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Username e/o password errati" />
                </VBox>
            </StackPane>

            <!-- Separatore verticale -->
            <Pane prefWidth="2" style="-fx-background-color: #CCCCCC;" />

            <!-- Immagine -->
            <StackPane styleClass="image-pane" HBox.hgrow="ALWAYS">
                <VBox alignment="CENTER" spacing="20">
                    <ImageView fitWidth="200" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/logoImage.png" />
                        </image>
                    </ImageView>
                </VBox>
            </StackPane>
        </HBox>
    </children>
</AnchorPane>

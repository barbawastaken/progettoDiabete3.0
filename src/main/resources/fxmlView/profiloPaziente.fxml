    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="TOP_CENTER" spacing="40" style="-fx-padding: 30;">
                <HBox alignment="CENTER" prefHeight="53.0" prefWidth="725.0" spacing="20">
                    <VBox spacing="5">
                        <Text text="Nome" />
                        <TextField fx:id="nome" disable="true" promptText="nome" />
                    </VBox>
                    <VBox spacing="5">
                        <Text text="Cognome" />
                        <TextField fx:id="cognome" disable="true" promptText="cognome" />
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="5">
                        <Button onAction="#onPasswordPressed" text="Cambia password..." />
                        <Text text="Nuova password" fx:id="nuovaPasswordText" visible="false" />
                        <TextField fx:id="nuovaPasswordField" visible="false" />
                        <Text text="Conferma password" fx:id="confermaPasswordText" visible="false" />
                        <TextField fx:id="confermaPasswordField" visible="false" />
                        <Button fx:id="confermaPasswordButton" onAction="#onCambiaPasswordPressed" text="Conferma" visible="false" />
                    </VBox>
                    <VBox spacing="5">
                        <Text text="Codice Fiscale" />
                        <TextField fx:id="taxCodeFXML" disable="true" promptText="taxCode" />
                    </VBox>
                </HBox>

                <Line endX="100.0" layoutX="301.0" layoutY="458.0" startX="-100.0" />

                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="5">
                        <Text text="Email" />
                        <Text fx:id="erroreEmail" text="L'email è invalida" fill="red" visible="false"/>
                        <TextField fx:id="email" promptText="email" />
                    </VBox>
                    <VBox spacing="5">
                        <Text text="Telefono" />
                        <Text fx:id="erroreTelefono" text="Il telefono è invalido" fill="red" visible="false"/>
                        <TextField fx:id="telefono" promptText="telefono" />
                    </VBox>
                </HBox>

                <Line endX="100.0" layoutX="301.0" layoutY="458.0" startX="-100.0" />

                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="5">
                        <Text text="Data di nascita" />
                        <TextField fx:id="dataNascita" disable="true" />
                    </VBox>
                    <VBox alignment="CENTER" spacing="5">
                        <Text text="Sesso" />
                        <TextField fx:id="sesso" disable="true" />
                    </VBox>
                </HBox>

                <Line endX="100.0" layoutX="301.0" layoutY="458.0" startX="-100.0" />

                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="5">
                        <Text text="Altezza (cm)" />
                        <Text fx:id="erroreAltezza" text="L'altezza è invalida" fill="red" visible="false"/>
                        <TextField fx:id="altezza" promptText="altezza" />
                    </VBox>
                    <VBox spacing="5">
                        <Text text="Peso (kg)" />
                        <Text fx:id="errorePeso" text="Il peso è invalido" fill="red" visible="false"/>
                        <TextField fx:id="peso" promptText="peso" />
                    </VBox>
                </HBox>

                <Line endX="100.0" layoutX="301.0" layoutY="458.0" startX="-100.0" />

                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="5">
                        <Text text="Indirizzo" />
                        <Text fx:id="erroreIndirizzo" text="L'indirizzo è invalido" fill="red" visible="false"/>
                        <TextField fx:id="indirizzo" promptText="indirizzo" />
                    </VBox>
                    <VBox spacing="5">
                        <Text text="Numero" />
                        <Text fx:id="erroreNumero" text="Il numero è invalido" fill="red" visible="false"/>
                        <TextField fx:id="numero" promptText="numero" />
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="5">
                        <Text text="Città" />
                        <Text fx:id="erroreCitta" text="La città è invalida" fill="red" visible="false"/>
                        <TextField fx:id="citta" promptText="citta" />
                    </VBox>
                    <VBox spacing="5">
                        <Text text="CAP" />
                        <Text fx:id="erroreCap" text="Il CAP è invalida" fill="red" visible="false"/>
                        <TextField fx:id="cap" promptText="cap" />
                    </VBox>
                </HBox>

                <Line endX="100.0" layoutX="301.0" layoutY="458.0" startX="-100.0" />

                <VBox alignment="CENTER" spacing="15">
                    <Button onAction="#onSendButtonPressed" text="Salva" />
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

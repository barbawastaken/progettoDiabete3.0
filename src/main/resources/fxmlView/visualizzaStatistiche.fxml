<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.text.Text?>
<BorderPane minHeight="500.0" minWidth="800.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Amministratore.VisualizzaStatisticheController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: dodgerblue; -fx-padding: 5;">
            <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                <Image url="@../images/userImage.png" />
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Area Amministratore" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#onHomePagePressed" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-min-width: 100;" text="HOMEPAGE"/>
            <Button onAction="#onLogoutPressed" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-min-width: 80;" text="LOGOUT" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox spacing="15" style="-fx-padding: 15;">

                <!-- Pannello di selezione responsive -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;">
                     <Label text="Seleziona Paziente:" style="-fx-font-weight: bold;"/>
                     <ComboBox fx:id="pazienteCombo" prefWidth="150" minWidth="50" maxWidth="150" promptText="Tutti i pazienti" HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Grafico che si adatta automaticamente alle dimensioni -->
                <VBox VBox.vgrow="ALWAYS" style="-fx-padding: 5;">
                    <LineChart fx:id="lineChart" title="Andamento glicemico pazienti" style="-fx-font-weight: bold;" minHeight="350" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Data - Momento - Pre/Post" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Valore Glicemico" />
                        </yAxis>
                    </LineChart>
                </VBox>

                <!-- Grafico per andamento glicemico dell'ultimo mese e dell'ultima settimana -->
                <HBox spacing="20" style="-fx-padding: 5;">
                    <LineChart fx:id="lineChartLastMonth" title="Andamento glicemico nell'ultimo mese" style="-fx-font-weight: bold;" minHeight="350" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Data - Momento - Pre/Post" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Valore Glicemico" />
                        </yAxis>
                    </LineChart>

                    <LineChart fx:id="lineChartLastWeek" title="Andamento glicemico nell'ultima settimana" style="-fx-font-weight: bold;" minHeight="350" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <xAxis>
                            <CategoryAxis label="Data - Momento - Pre/Post" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Valore Glicemico" />
                        </yAxis>
                    </LineChart>
                </HBox>

                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="15" style="-fx-padding: 20;">
                    <!-- Titolo -->
                    <Text text="Terapie Prescritte"
                          textAlignment="CENTER"
                          style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                    <HBox alignment="CENTER">
                        <TableView fx:id="tabellaTerapie" VBox.vgrow="ALWAYS" minHeight="150">
                            <columns>
                                <TableColumn fx:id="nomePazienteTerapia" text="Paziente" prefWidth="150"/>
                                <TableColumn fx:id="nomeTerapia" text="Terapia" prefWidth="150"/>
                                <TableColumn fx:id="farmacoTerapia" text="Farmaco" prefWidth="120"/>
                                <TableColumn fx:id="quantitaTerapia" text="QuantitÃ " prefWidth="60"/>
                                <TableColumn fx:id="assunzioniGiornaliereTerapia" text="Assunzioni giornaliere" prefWidth="140"/>
                                <TableColumn fx:id="indicazioniTerapia" text="Indicazioni" prefWidth="170"/>
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
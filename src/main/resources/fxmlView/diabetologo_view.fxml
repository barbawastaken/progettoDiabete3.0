<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Diabetologo.DiabetologoController">

   <children>
      <VBox prefWidth="600.0" prefHeight="400.0" spacing="20"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

         <!-- Barra superiore -->
         <HBox style="-fx-background-color: dodgerblue;" alignment="CENTER_LEFT" spacing="10" prefHeight="80.0">
            <padding>
               <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
               <image>
                  <Image url="@../images/userImage.png" />
               </image>
            </ImageView>
            <Label text="Area Diabetologo" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Logout" prefHeight="30.0" prefWidth="80.0" onAction="#handleLogout" />
         </HBox>

         <!-- Spazio per distanziare verticalmente -->
         <Pane VBox.vgrow="ALWAYS"/>

         <!-- Sezione pulsanti -->
         <HBox alignment="CENTER" spacing="30">
            <padding>
               <Insets top="0" right="20" bottom="0" left="20"/>
            </padding>
            <Button text="Visualizza pazienti" prefWidth="200.0" prefHeight="40.0" onAction="#isVisualizzaPazientiClicked"/>
            <Button text="Visualizza notifiche" prefWidth="200.0" prefHeight="40.0" onAction="#isVisualizzaNotificheClicked"/>
         </HBox>

         <Pane VBox.vgrow="ALWAYS"/>
      </VBox>
   </children>
</AnchorPane>

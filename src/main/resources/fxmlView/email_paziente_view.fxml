<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.shape.Rectangle?>
<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Paziente.EmailPazienteController">

    <top>
        <HBox fx:id="navbarContainer" />
    </top>

    <center>
        <HBox spacing="50" alignment="CENTER">
            <!-- Rettangolo sinistro -->
            <StackPane>
                <Rectangle width="400" height="430" fill="#5AC8FA" arcWidth="15" arcHeight="15" style="-fx-fill: #609EF0"/>
                <GridPane alignment="CENTER" vgap="50">
                    <Text fx:id="diabetologo" styleClass="testo-alt" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Text fx:id="telefono" styleClass="testo-alt" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Text fx:id="email" styleClass="testo-alt" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Text fx:id="indirizzo" styleClass="testo-alt" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                </GridPane>
            </StackPane>

            <!-- Rettangolo destro -->
            <StackPane>
                <Rectangle width="400" height="430" fill="#5AC8FA" arcWidth="15" arcHeight="15" style="-fx-fill: #609EF0"/>
                <VBox alignment="CENTER" spacing="15">
                    <Text text="Oggetto" styleClass="testo-alt"/>
                    <TextField fx:id="oggetto" styleClass="email" prefHeight="25.0" maxWidth="300" promptText="inserisci l'oggetto dell'email" />

                    <Text text="Messaggio" styleClass="testo-alt"/>
                    <TextArea fx:id="messaggio" prefHeight="150.0" styleClass="email" maxWidth="300" promptText="scrivi il messaggio da inviare" />

                    <Button onAction="#onSendButtonPressed" text="Invia" style="-fx-font-size: 14px; -fx-font-weight: bold" styleClass="bottone-alt"/>
                </VBox>
            </StackPane>
        </HBox>
    </center>


</BorderPane>
